<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.m3uAddonCreator"
       name="*Create your own XBMC/Kodi addon [COLOR cyan]from m3u playlist[/COLOR]"
       version="0.0.1"
       provider-name="DaveLN">
  <requires>
    <import addon="xbmc.python" version="2.1.0" optional="true" />				
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Addon Creator</summary>
    <description>Addon Creator</description>		
    <platform>all</platform>     
  </extension>
</addon>